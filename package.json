    "axios": "^1.2.2",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "email-validator": "^2.0.4",
    "fast-jwt": "^2.0.2",
    "fastify": "^4.11.0",
    "fastify-multer": "^2.0.3",
    "fastify-plugin": "^4.4.0",
    "form-data": "^4.0.0",
    "fs-extra": "^11.1.0",
    "generate-password": "^1.7.0",
    "hash.js": "^1.1.7",
    "html-to-text": "^9.0.3",
    "ioredis": "^5.2.4",
    "is-sn-integer": "^0.3.0",
    "isomorphic-dompurify": "^0.25.0",
    "mailgun.js": "^8.0.6",
