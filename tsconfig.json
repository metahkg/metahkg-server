{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2017",
      "noImplicitAny": true,
      "noImplicitUseStrict": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "sourceMap": true,
      "outDir": "dist",
      "removeComments": false,
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}
