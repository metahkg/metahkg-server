{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "noImplicitUseStrict": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["src/types/definitions"]
  },
  "include": ["src/**/*"],
  "ts-node": {
    "files": true
  },
  "files": ["src/main.ts"]
}
